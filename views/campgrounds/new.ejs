<% include ../partials/header %>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Create a New Campground</h1>
	</div>
	<div class="col-8 col-md-6 col-lg-4">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" id="name" placeholder="campground name">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="price" id="price" placeholder="price" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="image URL">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-dark btn-primary btn-block">Submit</button>
			</div>
		</form>	
		<a href="/campgrounds">Go Back</a>		
	</div>
</div>

<% include ../partials/footer %>